{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "erasableSyntaxOnly": true,
    "strict": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "outDir": "dist",
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",

    // JSX support for ink
    "jsx": "react"
  },
  "include": ["src"]
}
